/* canvas.styl */
html, body
  height 100%
  width 100%
  overflow hidden
  background-color #fff
  padding 0
  margin  0

canvas
  position fixed
  height 100%
  width 100%
  pointer-events none
  padding 0
  margin 0
  top 0
  left 0

#canvasShell
  position fixed
  height 100%
  width 100%
  pointer-events none
  padding 0
  margin 0
  top 0
  left 0


/* MODEL WINDOW STYLES */
#modelMask
  z-index: 5
  height: 100%
  width: 100%
  position: fixed
  top: 0
  left: 0
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(51,51,51,0.7)), color-stop(100%,rgba(51,51,51,1)))
  background: -webkit-radial-gradient(center, ellipse cover,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)
  background: radial-gradient(ellipse at center,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)

#modelWindow
  z-index: 10
  position: fixed
  top: 15%
  left: 4%
  height: 70%
  width: 90%
  background-color: #ddd
  border:6px solid blue
  border-radius: 10px

  h1
    text-align: center
    font-weight: 800

  p
    padding: 0 10px 0 10px
    margin: 0
    text-align: center
    font-size: 22px

  button
    height: 50px
    width: 120px
    border: 3px solid #000
    border-radius: 6px
    background-color: blue
    color: #fff
    position: absolute
    bottom: 10px
    left: 50%
    margin-left: -60px
    font-size: 18px
