*
  outline: none

html, body
  height: 100%
  width: 100%
  overflow: hidden
  padding:0
  margin: 0
  background-color: #e02443
  min-height 370px

h1
  margin 0
  padding 0
  text-align center
  color #fff
.mainPage
  background-color: #000
  height: 100%
  width: 100%
  margin-bottom 40px

#container
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, #e02443), color-stop(100%, #8f0d23))
  background: -webkit-radial-gradient(center, ellipse cover, #e02443 0%, #8f0d23 100%)
  background: radial-gradient(ellipse at center, #e02443 0%, #8f0d23 100%)
  left: 0
  right: 0
  height 100%

.showWrapper
  background-color: #000
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

header
  padding-top:10px
  background-color: #e02443
  height:60px
  width:100%
  margin-bottom: 10px

  p
    padding 0px
    margin 0
    font-size:18px
    color: #fff
    text-align: center
    font-weight: 400
  
  p.showTitle
    font-size 22px
    font-weight: 800

button
  margin: 20px auto
  display:block
  width: 75%
  height: 50px
  border:1px solid #aaa
  border-radius 10px
  border-bottom:3px solid #bbb
  font-size:16px
  color:#fff
  background-color: #8f0d23

button:active
  border-bottom:1px solid #aaa
  border-top:2px solid #bbb
  color:#ddd
  background-color: #e02443

#wrapper
  position:fixed
  height: 100%
  width: 100%
  top: 0
  left:0
  background-color: #000

#drawOptions
  height: 100%
  width: 100%

.colors
  margin-top:20px
  height: 60%
  width: 100%

.colorBlock
  border: 1px solid #000
  width: 100px
  height:100px
  display: inline-block
  list-style: none

form
  margin-top: 50px

input[type='range']
  -webkit-appearance: none
  background-color: gray
  width:98%
  height:60px

input[type='range']::-webkit-slider-thumb
  width: 65px
  height: 65px

#exitShow
  position: fixed
  bottom: 0
  font: 12px
  height: 25px
  width: 100%
  background: transparent
  border: 1px solid #333
  color: #333
  text-align: center

#modelMask
  z-index: 5
  height: 100%
  width: 100%
  position: fixed
  top: 0
  left: 0
  background: -moz-radial-gradient(center, ellipse cover,  rgba(51,51,51,0.7) 0%, rgba(51,51,51,1) 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(51,51,51,0.7)), color-stop(100%,rgba(51,51,51,1)))
  background: -webkit-radial-gradient(center, ellipse cover,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)
  background: -o-radial-gradient(center, ellipse cover,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)
  background: -ms-radial-gradient(center, ellipse cover,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)
  background: radial-gradient(ellipse at center,  rgba(51,51,51,0.7) 0%,rgba(51,51,51,1) 100%)

.shows
  padding-top 20px

  ul
    padding 0
    margin 0

    li
      width 80%
      height 60px
      padding 0px 10px 0 10px
      color #fff
      margin 0 auto
      list-style none
      padding-left 20px
