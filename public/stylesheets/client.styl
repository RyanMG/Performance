body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  width 100%
  height 100%
  padding 0
  margin 0
  background-color #111;


/* text and headline styles */
h1
  text-align center
  color #222

#wrapper 
  height 100%;
  width 100%
  position: absolute
  top 0
  left 0
  background-color #fff

#drawOptions
  height: 100%
  width: 100%

.colors
  margin-top:5%
  height: 60%
  width: 100%

.colorBlock
  border: 1px solid #000
  width: 100px
  height:100px
  display: inline-block
  list-style: none

form
  margin-top: 50px

input[type='range']
  -webkit-appearance: none
  background-color: gray
  width:98%
  height:60px

input[type='range']::-webkit-slider-thumb
  width: 65px
  height: 65px


/* MODEL STYLES */

#modelMask
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  background-color #000
  opacity .8

#modelWindow
  position fixed
  height 80%
  width 90%
  left 4%
  top 10%
  background-color #fff
  border 8px solid #999
  border-radius 10px

  h1
    text-align center
    font-size 50px

  p
    text-align center
    font-size 20px
    line-height 24px